doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/images/fav-icon.png")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title Brewhive Deck | #{title}
    link(href="/css/bootstrap.min.css", rel="stylesheet")
    link(href="/css/styles.css", rel="stylesheet")
    script(src="/javascript/jquery.min.js" type="text/javascript")
    script(src="/javascript/bootstrap.min.js" type="text/javascript")
    block head
     
  body
    block header
      header
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark 
          a.navbar-brand(href="/") Brewhive Deck
          button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          div.collapse.navbar-collapse(id="navbarNav")
            ul.navbar-nav
              li.nav-item.active
                a.nav-link(href="/gallery") Gallery
    block content
      main
        div.container
    block footer
      footer
